<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currencies_d_new_code_currency"
            android:id="@+id/currencies_d_new_text_code_currency" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/currencies_d_new_code_currency" android:layout_below="@+id/currencies_d_new_text_code_currency"
            android:layout_alignParentLeft="true" android:inputType="text"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/currencies_d_new_code_currency"
            android:layout_alignParentLeft="true">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_cansel"
                android:id="@+id/currencies_d_new_cancel"
                android:layout_weight="1"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_ok"
                android:id="@+id/currencies_d_new_ok"
                android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>