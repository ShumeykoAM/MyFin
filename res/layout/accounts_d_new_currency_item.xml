<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_vertical"
                android:id="@+id/accounts_d_new_image_item_image">
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/accounts_d_new_currency_item_icon"
            android:layout_alignParentLeft="false"
            android:src="@drawable/ic_curr_rub"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUB"
            android:id="@+id/accounts_d_new_currency_item_name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/accounts_d_new_currency_item_icon"
            style="@style/account_d_new_currency_item_name"/>
</RelativeLayout>