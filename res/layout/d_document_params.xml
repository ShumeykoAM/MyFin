<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">
    <TextView
            android:id="@+id/d_document_params_name_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginLeft="12dp" android:text="Название категории">
    </TextView>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentLeft="false"
            android:id="@+id/linearLayout" android:layout_gravity="center" android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true" android:layout_below="@+id/d_document_params_name_category"
            android:background="@drawable/rectangle">
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                android:weightSum="1">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Цена"
                    android:id="@+id/d_document_params_l1" android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="4dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_document_params_price" android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/d_document_params_l1" android:numeric="decimal"
                    android:singleLine="true" android:inputType="numberDecimal"
                    android:layout_toLeftOf="@+id/d_document_params_price_currency" android:gravity="right"
                    android:nextFocusDown="@+id/d_document_params_amount"
                    android:nextFocusForward="@+id/d_document_params_amount"
                    android:nextFocusRight="@+id/d_document_params_amount" android:text="434.54"
                    android:imeOptions="flagNoExtractUi"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/d_document_params_price_currency"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp" android:text="руб." android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="за"
                    android:id="@+id/d_document_params_l2" android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="8dp" android:layout_marginLeft="10dp"
                    />
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_document_params_of"
                    android:numeric="decimal" android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:layout_toLeftOf="@+id/d_document_params_of_unit"
                    android:layout_centerVertical="true" android:layout_toRightOf="@+id/d_document_params_l2"
                    android:gravity="right"
                    android:text="1" android:imeOptions="flagNoExtractUi"/>
            <Spinner
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_document_params_of_unit" android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true" android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Кол-во"
                    android:id="@+id/d_document_params_l3" android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="4dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_document_params_amount"
                    android:layout_centerVertical="true" android:layout_toLeftOf="@+id/d_document_params_amount_unit"
                    android:numeric="decimal" android:singleLine="true"
                    android:inputType="numberDecimal" android:layout_toRightOf="@+id/d_document_params_l3"
                    android:gravity="right"
                    android:nextFocusLeft="@+id/d_document_params_price"
                    android:nextFocusUp="@+id/d_document_params_price" android:text="4"
                    android:imeOptions="flagNoExtractUi"/>
            <Spinner
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_document_params_amount_unit" android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="false" android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" android:layout_marginLeft="4dp"
                    />
        </RelativeLayout>
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="0.99">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Стоимость"
                    android:id="@+id/d_document_params_l4"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="4dp" android:layout_centerVertical="true"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_document_params_cost" android:layout_alignParentTop="false"
                    android:numeric="decimal" android:singleLine="true" android:inputType="numberDecimal"
                    android:layout_centerVertical="true" android:gravity="right"
                    android:text="45543"
                    android:layout_toLeftOf="@+id/d_document_params_cost_currency"
                    android:layout_toRightOf="@+id/d_document_params_l4"
                    android:imeOptions="flagNoExtractUi"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="руб."
                    android:id="@+id/d_document_params_cost_currency"
                    android:layout_centerVertical="true" android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:id="@+id/d_document_params_save"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout"/>
</RelativeLayout>