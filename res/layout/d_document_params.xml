<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">
    <TextView
            android:id="@+id/d_document_params_name_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_marginLeft="12dp" android:text="Название категории">
    </TextView>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentLeft="false"
            android:id="@+id/d_document_params_ll_common" android:layout_gravity="center" android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true" android:layout_below="@+id/d_document_params_name_category"
            android:background="@drawable/rectangle">
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_document_params_ll_price" android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/d_document_params_ll_of">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price"
                        android:layout_marginLeft="5dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/d_document_params_price"
                        android:numeric="decimal"
                        android:singleLine="true" android:inputType="numberDecimal"
                        android:gravity="center_vertical|right"
                        android:nextFocusDown="@+id/d_document_params_amount"
                        android:nextFocusForward="@+id/d_document_params_amount"
                        android:nextFocusRight="@+id/d_document_params_amount" android:text="434.54"
                        android:imeOptions="flagNoExtractUi"
                        android:maxLength="11" android:textSize="16sp"
                        android:nextFocusLeft="@+id/d_document_params_cost"
                        android:nextFocusUp="@+id/d_document_params_cost"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_alignParentTop="false"
                    android:layout_toLeftOf="@+id/d_document_params_of_unit"
                    android:layout_alignParentRight="false" android:id="@+id/d_document_params_ll_of"
                    android:layout_marginLeft="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/of"
                />
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/d_document_params_of"
                        android:numeric="decimal" android:singleLine="true"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical|right"
                        android:text="0.880" android:imeOptions="flagNoExtractUi" android:minWidth="80dp"
                        android:maxLength="6" android:textSize="16sp"/>
            </LinearLayout>
            <Spinner
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/d_document_params_of_unit" android:layout_gravity="center_horizontal"
                    android:layout_centerVertical="true" android:layout_alignParentRight="true"
                    android:layout_marginLeft="4dp" android:layout_alignBottom="@+id/d_document_params_ll_price"/>
        </RelativeLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="bottom" android:baselineAligned="false">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="55"
            >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/amount"
                        android:layout_marginLeft="5dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/d_document_params_amount"
                        android:numeric="decimal" android:singleLine="true"
                        android:inputType="numberDecimal"
                        android:gravity="center_vertical|right"
                        android:nextFocusLeft="@+id/d_document_params_price"
                        android:nextFocusUp="@+id/d_document_params_price" android:text="1234567"
                        android:imeOptions="flagNoExtractUi" android:maxLength="7" android:textSize="16sp"
                        android:nextFocusDown="@+id/d_document_params_cost"
                        android:nextFocusForward="@+id/d_document_params_cost"
                        android:nextFocusRight="@+id/d_document_params_cost"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="90dp"
                    android:layout_height="match_parent" android:minWidth="90dp" android:gravity="bottom">
                <Spinner
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/d_document_params_amount_unit"
                        android:layout_marginLeft="4dp"
                        android:minWidth="90dp"
                />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="45" android:layout_marginLeft="6dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cost"
                        android:layout_marginLeft="5dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/d_document_params_cost"
                        android:numeric="decimal" android:singleLine="true" android:inputType="numberDecimal"
                        android:gravity="center_vertical|right"
                        android:text="45543"
                        android:imeOptions="flagNoExtractUi" android:maxLength="11" android:textSize="16sp"
                        android:nextFocusLeft="@+id/d_document_params_amount"
                        android:nextFocusUp="@+id/d_document_params_amount"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_below="@+id/d_document_params_ll_common"
            android:layout_centerHorizontal="true">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_ok"
                android:id="@+id/d_document_params_ok"
                android:layout_weight="50"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel"
                android:id="@+id/d_document_params_cancel"
                android:layout_weight="50"/>
    </LinearLayout>
</RelativeLayout>