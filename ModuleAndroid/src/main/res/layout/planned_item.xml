<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Хлеб"
            android:id="@+id/planned_item_name"
            android:layout_centerVertical="true" android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/planned_item_count"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="шт."
            android:id="@+id/planned_item_unit"
            android:layout_centerVertical="true"
            android:paddingTop="8dp" android:paddingRight="4dp"
            android:layout_toLeftOf="@+id/planned_item_choose"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4"
            android:id="@+id/planned_item_count" android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/planned_item_unit"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/planned_item_choose" android:layout_centerVertical="true"
            android:layout_alignParentRight="true" android:src="@drawable/ic_basket_full"
            android:paddingLeft="10dp"/>
</RelativeLayout>