<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.kot.myfin">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_launcher"
            android:supportsRtl="true"
            android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name="com.bloodliviykot.MyFin.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bloodliviykot.MyFin.Accounts"
                  android:windowSoftInputMode="adjustPan|adjustResize">
        </activity>
        <activity android:name="com.bloodliviykot.MyFin.Register"
                  android:windowSoftInputMode="adjustPan|adjustResize">
        </activity>
        <activity android:name="com.bloodliviykot.MyFin.Planned"
                  android:windowSoftInputMode="adjustPan|adjustResize">
        </activity>
        <activity android:name="com.bloodliviykot.MyFin.Categories"
                  android:windowSoftInputMode="adjustPan|adjustResize">
        </activity>
        <activity android:name="com.bloodliviykot.MyFin.ChooseCategories"
                  android:windowSoftInputMode="adjustPan|adjustResize"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
    </application>

</manifest>
